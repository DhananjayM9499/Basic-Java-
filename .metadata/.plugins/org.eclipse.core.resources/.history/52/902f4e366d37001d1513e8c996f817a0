package cdac.in;
import  java.util.*;
class Entry{
	public void Calculations() {
		double Amount,Principal,interest,years;
		
		Scanner scan=new Scanner(System.in);
		
		System.out.println("Enter the principal amount");
		Principal=scan.nextFloat();
		
		System.out.println("Enter interest ");
		interest=scan.nextFloat();
		
		//System.out.println("Enter compound times ");
		//time=scan.nextFloat();
		
		System.out.println("Enter the time period");
		years=scan.nextFloat();
		
		Amount= (Principal*Math.pow(1+(interest/100),years));
	System.out.println(Amount);
	}
	
}


public class Compoundinterest {

	public static void main(String[] args) {
		Entry compoundinterest=new Entry();
		compoundinterest.Calculations();

	}

}
